<div class="row pb-3 backgroundDark">
    @if (Model != null)
    {
        foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#008cba">@product.Title</b></p>
                                <p class="card-title text-white">by <b>@product.Author</b></p>
                            </div>
                            <div style="padding-left:5px;">
                                <p>List Price:<b class="">$ @product.ListPrice.ToString("0.00")</b></p>
                            </div>

                        </div>
                        
                    </div>
                </div>
            </div>
        }
    }
    else
    {
         <div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
    }
</div>