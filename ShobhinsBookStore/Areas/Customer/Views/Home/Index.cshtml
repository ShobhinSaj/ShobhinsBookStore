<div class="row pb-3 backgroundDark">
    @if (Model.Any())
    {
        
        foreach (var product in Model)
        {
        
            <div class="col-lg-3 col-md-6">
                <div class="row p-1 h-100">
                    <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card bg-white h-100" style="border:0px;">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div style="padding-left:5px;">
                                <p class="card-title h5"><b style="color:#008cba">@product.Title</b></p>
                                <p class="card-title text-dark">by <b>@product.Author</b></p>
                            </div>
                            <div style="padding-left:5px;">
                                <p class="text-dark">List Price:<b>$ @product.ListPrice.ToString("0.00")</b></p>
                            </div>

                        </div>
                        
                    </div>
                </div>
            </div>
        }
    }
    else
    {
         <div class="text-center">
             <h1 class="display-4 text-white">Welcome to Shobhins BookStore</h1>
               @* <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
               <p class="text-danger fs-5">Oops! We are currently under maintenance, Please check back with us later!</p>
           </div>
    }
</div>