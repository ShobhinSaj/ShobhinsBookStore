@model ShobhinsBooks.Models.Product


@{
    ViewData["Title"] = "Details";
}



<div class="container mt-3">
    <div class="row">  
        <div class="col-md-12 col-lg-8 order-1 order-md-0">
            <h3 class="mt-4">@Model.Title</h3>
            <div class="mt-1">@Html.Raw(Model.Description)</div>
            <p class="mt-4"><strong>Author:</strong>&nbsp;@Model.Author</p>
            <p><strong>ISBN:</strong>&nbsp;@Model.ISBN</p>
            <p><strong>List Price:</strong>&nbsp;$@Model.ListPrice.ToString("0.00")</p>
            <p><strong>Category:</strong>&nbsp;@Model.Category.Name</p>
            <p><strong>Cover Type:</strong>&nbsp;@Model.CoverType.Name</p>
        </div>

        <div class="col-md-6 col-lg-3 order-0 order-md-1 pt-4">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
       
    </div>
    <div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
   